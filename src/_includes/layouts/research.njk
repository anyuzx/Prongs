{% extends "layouts/base.njk" %}

{% block content %}
{%- for project in collections.research | reverse -%}
  {% if project.fileSlug === "summary" %}
    <article class="mb-4 note">
      <h1 class="text-center text-xl font-bold leading-tight">{{ project.data.title }}</h1>
      {{ project.templateContent | safe }}
    </article>
  {% else %}
    <article id="{{ project.data.title | slug }}">
      <h2 class="text-xl font-bold leading-tight text-left -mt-32 sm:-mt-20 border-t-32 sm:border-t-20 border-solid border-transparent" style="-webkit-background-clip:padding-box;-moz-background-clip:padding;background-clip:padding-box;">{{ project.data.title }}</h2>
      {% if project.data.image %}
      <img src="{{ project.data.image }}" width="300" alt="illustration" style="float: right;margin-bottom:0;">
      {% endif %}
      {{ project.templateContent | safe }}
    </article>
    {% if not loop.last %}
      <hr>
    {% endif %}
  {% endif %}
{% endfor %}
{% endblock %}
