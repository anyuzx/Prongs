{% extends "layouts/base.njk" %}
{% set pageType = "post" %}

{% block head %}
{# include prismjs theme css file #}
<link rel="stylesheet" type="text/css" href="/_includes/css/prism-sulphurpool.css">

{# include katex css file #}
{% if disableKatex %}
{% else %}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.10.2/dist/katex.min.css" integrity="sha384-yFRtMMDnQtDRO8rLpMIKrtPCD5jdktao2TV19YiZYWMDkUR5GQZR/NOVTdquEx1j" crossorigin="anonymous">
{# in-page custom style for katex and img #}
<style type="text/css">
.katex-block{overflow-x:scroll}
</style>
{% endif %}

{% endblock %}
{% block content %}
<article>
  {% if coverImage %}
  <header>
    <figure>
      <img src="{{ coverImage }}" alt="Cover Image">
    </figure>
  </header>
  {% endif %}
  <header>
    <h1 class="text-left">{{ title }}</h1>
    <div class="flex justify-between text-sm font-mono">
      <div class="self-center">
        {{ page.date | formatDate }}
      </div>
      <div class="self-center">
        {%- for tag in tags %}
          <button class="post-tag hover:bg-gray-500">
            <a href="/tags/{{ tag | slug }}">
            #{{ tag }}
            </a>
          </button>
        {% endfor -%}
      </div>
    </div>
    </header>
  <hr class="my-4">
  {{ content | safe }}
</article>
{% endblock %}
