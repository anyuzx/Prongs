{% set scrollActiveTOC %}
  {% include "../js/scrollActiveTOC.js" %}
{% endset %}

{% extends "layouts/base.njk" %}
{% set pageType = "post" %}

{% block head %}
{% if site.ENV == "development" %}
  <link rel="stylesheet" type="text/css" href="/_includes/css/highlight.css">
{% endif %}

{# include katex css file #}
{% if disableKatex %}
{% else %}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.11.1/dist/katex.min.css" integrity="sha384-zB1R0rpPzHqg7Kpt0Aljp8JPLqbXI3bhnPWROx27a9N0Ll6ZP/+DiW/UqRcLbRjq" crossorigin="anonymous" media="print" onload="this.media='all'; this.onload=null;">
{# in-page custom style for katex and img #}
<style type="text/css">
.katex-block { overflow-x:scroll }
.katex { font-size: 1.1em; }
</style>
{% endif %}
{# include javscript for scroll active table of contents #}
{% if TOC %}
<script>
  {{ scrollActiveTOC | safe }}
</script>
{% endif %}

{% endblock %}

{% block content %}
{% if numberHeading %}
  <article class="single-post number-heading">
{% else %}
  <article class="single-post">
{% endif %}
  {% if image %}
  <header>
    <figure>
      <img src="{{ image.path }}" alt="{{ image.description }}">
    </figure>
  </header>
  {% endif %}
  <header>
    <h1 class="mb-6">{{ title }}</h1>
    <div class="flex justify-between text-sm">
      <div class="self-center">
      {% dayjs page.date, 'MMM DD, YYYY' %}
      </div>
      <div class="self-center">
        {%- for tag in tags %}
          {% if tag !== "pinned" %}
            <a class="mx-1 p-1 font-mono hover:bg-black hover:text-white" href="/tags/{{ tag | slug }}">
            #{{ tag }}
            </a>
          {% endif %}
        {% endfor -%}
      </div>
    </div>
  </header>
  <hr class="my-4 bg-black border-0" style="height:3px">
  <main class="mx-auto flow" style="max-width:40em;">
    {{ content | safe }}
  </main>
</article>
{% endblock %}

{% block bodyend %}
{% if script %}
  {% if script.link %}
    <script src={{ script.link }}></script>
  {% endif %}
  {% if script.inline %}
    {% set scriptRAW %}
      {% include script.inline %}
    {% endset %}
    <script>
      {{ scriptRAW | jsmin | safe }}
    </script>
  {% endif %}
{% endif %}
{% endblock %}
