<section class="bg-lightgray sm:float-left sm:mr-6 sm:w-1/3">
    <div class="p-2">
        <figure class="mb-0">
            <img src="{{ site.AUTHOR.PHOTO }}" alt="myself-photo">
        </figure>
    </div>
    <div class="p-2">
        <div class="mb-6">
            <p class="font-bold font-secondary">{{ site.AUTHOR.TITLE }}</p>
            <p class="text-darkgray mb-4">{{ site.AUTHOR.SECOND_TITLE }}</p>
            <p>{{ site.AUTHOR.SHORT_BIO }}</p>
        </div>
        <div class="text-sm font-mono divide-x divide-white">
            {%- if site.AUTHOR.TWITTER -%}<span class="inline-block bg-lightgray p-2 hover:bg-darkergray"><a href="https://twitter.com/{{ site.AUTHOR.TWITTER }}">Twitter</span>{%- endif -%}
            {%- if site.AUTHOR.GOOGLE_SCHOLAR -%}<span class="inline-block bg-lightgray p-2 hover:bg-darkergray"><a href={{ site.AUTHOR.GOOGLE_SCHOLAR }}>Google Scholar</span>{%- endif -%}
            {%- if site.AUTHOR.GITHUB %}<span class="inline-block bg-lightgray p-2 hover:bg-darkergray"><a href="https://github.com/{{ site.AUTHOR.GITHUB }}">GitHub</span>{%- endif -%}
        </div>
    </div>
</section>
