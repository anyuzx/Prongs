{% set rssLogo %}
  {% include "../svg/rss.svg" %}
{% endset %}

{% set sourcecodeLogo %}
  {% include "../svg/code.svg" %}
{% endset %}

{% set copyrightLogo %}
  {% include "../svg/creative_commons.svg" %}
{% endset %}

{% set publishIcon %}
  {% include "../svg/publish.svg" %}
{% endset %}

<footer class="flex-shrink-0">
  <div class="sm:flex sm:justify-between p-4 text-center mx-auto text-sm border-t border-black" style="max-width:800px;">
    <div>
      {% if site.FEED %}
        <a href="/{{ site.FEED.PATH }}">
          <button class="inline-flex items-center bg-gray-100 hover:bg-black hover:text-white p-1 rounded-sm">
            <span class="icon w-3 h-3">
              {{ rssLogo | svgo | safe }}
            </span>
          </button>
        </a>
      {% endif %}
      {% if site.SOURCE_CODE %}
        <a href="{{ site.SOURCE_CODE }}">
          <button class="inline-flex items-center bg-gray-100 hover:bg-black hover:text-white p-1 rounded-sm">
            <span class="icon w-3 h-3">
              {{ sourcecodeLogo | svgo | safe }}
            </span>
          </button>
        </a>
      {% endif %}
      <a href="https://creativecommons.org/licenses/by-nc/4.0/" rel="noopener noreferrer" target="_blank">
        <button class="inline-flex items-center bg-gray-100 hover:bg-black hover:text-white p-1 rounded-sm">
          <span class="icon w-3 h-3 mr-1">
            {{ copyrightLogo | svgo | safe }}
          </span>
          <span style="line-height:0;"> 2019 by {{ site.AUTHOR.NAME }}</span>
        </button>
      </a>
    </div>
    <div>
      <a href="/">
        <button class="inline-flex items-center bg-gray-100 hover:bg-black hover:text-white p-1 rounded-sm">
          <span class="icon w-3 h-3 mr-1">
            {{ publishIcon | svgo | safe }}
          </span>
          <span style="line-height:0;">{% dayjs site.BUILD_TIME, 'HH:mm MMMM DD, YYYY' %}</span>
        </button>
      </a>
    </div>
  </div>
</footer>
