<section class="mb-20">
<h1 class="text-xl">Publication</h1>
{% for year, publications in references | groupByEx("issued.0.year") -%}
<h2 class="text-base mb-0">{{ year }}</h2>
<hr>
<ol class="list-outside list-none ml-0">
  {% for publication in publications %}
  <li class="mb-8">
    <div class="mb-2 capitalize font-medium">
    <a href="https://doi.org/{{ publication.DOI }}">{{ publication.title }}</a>
    </div>
    <div class="text-sm">
    {% for author in publication.author %}
      {% if author.family == "Shi" %}
        {%  if loop.last %}
          <span style="color:#19448e">{{ author.family }}, {{ author.given }}.</span>
        {% else %}
          <span style="color:#19448e">{{ author.family }}, {{ author.given }}., </span>
        {% endif %}
      {% else %}
        {% if loop.last %}
          <span>{{ author.family }}, {{ author.given }}.</span>
        {% else %}
          <span>{{ author.family }}, {{ author.given }}., </span>
        {% endif %}
      {% endif %}
    {% endfor %}
    <span class="italic">{{ publication["container-title"] }}</span><span> ({{ publication["issued"]["0"]["year"] }})</span>
    </div>
    </li>
    {% endfor %}
</ol>
{%- endfor %}
</section>

